<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{0}.%method{}\(%line\) | %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="WARN"/>
    <logger name="org.dbunit" level="WARN"/>
    <logger name="org.dbunit.dataset.AbstractTableMetaData" level="WARN"/>

    <logger name="org.djeysx" level="DEBUG" />


    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>

